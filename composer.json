{
	"name"       : "10up/wp_mock",
	"description": "A mocking library to take the pain out of unit testing for WordPress",
	"license"    : "GPL-2.0+",
	"require"    : {
		"php"                 : ">=5.6",
		"phpunit/phpunit"     : ">=5.7",
		"mockery/mockery"     : "^0.9.9",
		"antecedent/patchwork": "^2.0"
	},
	"autoload"   : {
		"psr-0"   : {
			"WP_Mock\\": "./"
		},
		"classmap": ["WP_Mock.php"]
	},
	"extra"      : {
		"branch-alias": {
			"dev-dev": "1.0.x-dev"
		}
	},
	"config": {
		"platform": {
			"php": "5.6"
		}
	},
	"scripts": {
		"test:behat": "behat",
		"test:phpunit": "phpunit",
		"test"      : [
			"@test:behat",
			"@test:phpunit"
		]
	}
}
